function appliquerMiseEnFormeConditionnelle() {
  var sheet = SpreadsheetApp.getActiveSpreadsheet().getActiveSheet();
  var range = sheet.getRange("B2:K100"); // Plage cibl√©e

  // üî¥ Supprimer toutes les r√®gles existantes avant d'ajouter les nouvelles
  sheet.setConditionalFormatRules([]);

  var rule1 = SpreadsheetApp.newConditionalFormatRule()
      .whenFormulaSatisfied('=$J2="En cours"')
      .setBackground("#FFFFE0") // Jaune p√¢le
      .setRanges([range])
      .build();
  
  var rule2 = SpreadsheetApp.newConditionalFormatRule()
      .whenFormulaSatisfied('=$J2="D√©pos√© AXIS"')
      .setBackground("#B0E57C") // Vert clair
      .setRanges([range])
      .build();
  
  var rule3 = SpreadsheetApp.newConditionalFormatRule()
      .whenFormulaSatisfied('=$J2="Envoy√© par mail"')
      .setBackground("#ADD8E6") // Bleu clair
      .setRanges([range])
      .build();
  
  var rule4 = SpreadsheetApp.newConditionalFormatRule()
      .whenFormulaSatisfied('=$J2="D√©pos√© DROP"')
      .setBackground("#D8BFD8") // Lavande clair
      .setRanges([range])
      .build();
  
  var rule5 = SpreadsheetApp.newConditionalFormatRule()
      .whenFormulaSatisfied('=$J2="Bloqu√©"')
      .setBackground("#FFA07A") // Rouge clair
      .setRanges([range])
      .build();

  // üü¢ Appliquer les nouvelles r√®gles
  sheet.setConditionalFormatRules([rule1, rule2, rule3, rule4, rule5]);
}
